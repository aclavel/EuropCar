<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<TextView
    android:id="@+id/tp_vehicule_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="VehiculeID" />

<TextView
    android:id="@+id/tp_vehicule_libelle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Libelle" />

<TextView
    android:id="@+id/tp_vehicule_nb_places"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="NbPlaces" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tp_vehicule_loc_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location min" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / " />

    <TextView
        android:id="@+id/tp_vehicule_loc_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location max" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tp_vehicule_tarif_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarif min" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" / " />

    <TextView
        android:id="@+id/tp_vehicule_tarif_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarif max" />

</LinearLayout>

</LinearLayout>